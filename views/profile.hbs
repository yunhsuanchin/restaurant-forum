{{!-- profile --}}
<div class="card mb-3">
  <div class="profile card-body">
    <div class="row">
      <div class="col-md-4">
        {{#if user.image}}
        <img class="img-responsive center-block" src="{{user.image}}" alt="" style="width: 300px; height: 300px; object-fit: cover;">
        {{else}}
        <img class="img-responsive center-block" src="https://www.eguardtech.com/wp-content/uploads/2018/08/Network-Profile.png" alt="" style="width: 300px; height: 300px; object-fit: cover;">
        {{/if}}
      </div>
      <div class="col-md-8">
        <div class="well mt-5">
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Name:</strong> {{user.name}}</li>
            <li class="list-group-item"><strong>Email:</strong> {{user.email}}</li>
          </ul>
        </div>
        {{#ifEqual User.id user.id}}
          <a href="/users/{{user.id}}/edit" class="mt-5 btn btn-primary">Edit</a>
        {{/ifEqual}}
      </div>
    </div>
  </div>
</div>

<div class="row mb-3">
  <div class="card-deck col">
    {{!-- followings --}}
    <div class="card">
      <div class="card-header">
        <strong>{{user.Followings.length}}</strong> followings
      </div>
      <div class="card-body">
        {{#each user.Followings}}
          <a href="/users/{{this.id}}" class="rest-img d-inline-block mb-3 mr-2" title="{{this.name}}">
          {{#if this.image}}
            <img src="{{this.image}}" alt="" class="rounded" style="width: 6rem;">
          {{else}}
            <img src="https://www.eguardtech.com/wp-content/uploads/2018/08/Network-Profile.png" alt="" class="rounded" style="width: 6rem;">
          {{/if}}
          </a>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="card-deck col">
    {{!-- followers --}}
    <div class="card">
      <div class="card-header">
        <strong>{{user.Followers.length}}</strong> followers
      </div>
      <div class="card-body">
        {{#each user.Followers}}
          <a href="/users/{{this.id}}" class="rest-img d-inline-block mb-3 mr-2" title="{{this.name}}">
          {{#if this.image}}
            <img src="{{this.image}}" alt="" class="rounded" style="width: 6rem;">
          {{else}}
            <img src="https://www.eguardtech.com/wp-content/uploads/2018/08/Network-Profile.png" alt="" class="rounded" style="width: 6rem;">
          {{/if}}
          </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>
{{!-- commented restaurants --}}
<div class="card mb-3">
  <div class="card-header">
      <strong>{{newComments.length}}</strong> 已評論餐廳
  </div>
  <div class="card-body">
    {{#each newComments}}
      <a href="/restaurants/{{this.Restaurant.id}}" class="rest-img d-inline-block mb-3 mr-2" title="{{this.Restaurant.name}}">
        <img src="{{this.Restaurant.image}}" alt="" class="rounded" style="width: 8rem;">
      </a>
    {{/each}}
  </div>
</div>

{{!-- favorited restaurants --}}
<div class="card mb-5">
  <div class="card-header">
      <strong>{{user.FavoritedRestaurants.length}}</strong> 收藏的餐廳
  </div>
  <div class="card-body">
    {{#each user.FavoritedRestaurants}}
      <a href="/restaurants/{{this.id}}" class="rest-img d-inline-block mb-3 mr-2" title="{{this.name}}">
        <img src="{{this.image}}" alt="" class="rounded" style="width: 8rem;">
      </a>
    {{/each}}
  </div>
</div>
