<h1>人氣餐廳</h1>
<hr />

<div class="row">
  {{#each restaurants}}
  <div class="col-md-6">
    <div class="card mb-4">
      <div class="row no-gutters">
        <div class="col-auto">
          <img src="{{this.image}}" width="200px" height="200px" style="object-fit: cover;" alt="">
        </div>
        <div class="col">
          <div class="card-block px-2">
            <h4 class="card-title">{{this.name}}</h4>
            <span class="badge badge-secondary">收藏數：{{this.favoritedCount}}</span>
            <p class="card-text">{{this.description}}</p>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <a href="/restaurants/{{this.id}}" class="btn btn-info">SHOW</a>
        {{#if this.isFavorited}}
        <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" class="d-inline">
          <button type="submit" class="btn btn-danger">移除最愛</button>
        </form>
        {{else}}
        <form action="/favorite/{{this.id}}" method="POST" class="d-inline">
          <button type="submit" class="btn btn-primary">加到最愛</button>
        </form>
        {{/if}}
      </div>
    </div>
  </div>
  {{/each}}
</div>